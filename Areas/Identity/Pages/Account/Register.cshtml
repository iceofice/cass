@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<div class="container-fluid bg-secondary mb-5">
	<div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 100px">
		<h1 class="font-weight-semi-bold text-uppercase mb-3">Register</h1>
	</div>
</div>

<div class="row px-xl-5">
	<div class="col-lg-5 mb-5"></div>
	<div class="col-lg-2 mb-5">
		<div class="contact-form">
			<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="control-group">
					<label asp-for="Input.Name"></label>
					<input asp-for="Input.Name" class="form-control" />
					<span asp-validation-for="Input.Name" class="text-danger"></span>
				</div>
				<div class="control-group">
					<label asp-for="Input.Phone"></label>
					<input asp-for="Input.Phone" class="form-control" />
					<span asp-validation-for="Input.Phone" class="text-danger"></span>
				</div>
				<div class="control-group">
					<label asp-for="Input.Email"></label>
					<input asp-for="Input.Email" class="form-control" />
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="control-group">
					<label asp-for="Input.Password"></label>
					<input asp-for="Input.Password" class="form-control" />
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div class="control-group">
					<label asp-for="Input.ConfirmPassword"></label>
					<input asp-for="Input.ConfirmPassword" class="form-control" />
					<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
				</div>
				<div class="control-group">
					<label asp-for="Input.UserRole"></label>
					<select asp-for="Input.UserRole" asp-items="Model.RoleSelectList" class="form-control"></select>
					<span asp-validation-for="Input.UserRole" class="text-danger"></span>
				</div>
				<button type="submit" class="btn btn-primary mt-2">Register</button>
			</form>
		</div>
		<div class="col-lg-5 mb-5"></div>
	</div>

	@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	}
</div>
