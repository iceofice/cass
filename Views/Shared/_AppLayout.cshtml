<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>CASS - Customer</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Favicon -->
    <link href="/assets/vendor/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
	<!-- Navbar Start -->
	<div class="container-fluid">
        <div class="row border-top px-xl-5 pt-3">
            <div class="col-lg-12 pb-1" style="vertical-align: middle">
                <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0" style="height: 100%">
                    <a class="navbar-brand" asp-area="" asp-controller="Customer" asp-action="Index">
                    <img src="../assets/vendor/logo.png"
                         alt="user-avatar"
                         class="d-block rounded p-2"
                         height="100"
                         id="logo"
                         style="object-fit: contain" />
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a class="nav-item nav-link" asp-controller="Customer" asp-action="Index">Customer</a>
                            <a class="nav-item nav-link" asp-controller="Customer" asp-action="Profile">Profile</a>
                        </div>
                        <div class="navbar-nav ml-auto py-0">
                            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button id="logout" type="submit" class="btn btn-primary py-2 px-4">Logout</button>
                            </form>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
	</div>
	<!-- Navbar End -->
	@RenderBody()

	<!-- Footer Start -->
	<div class="container-fluid bg-secondary text-dark mt-5 pt-5">
		<div class="row px-xl-5 pt-5">
            <div class="col-lg-4 col-md-12 mb-5 pr-3 pr-xl-5">
                <a class="navbar-brand" asp-area="" asp-controller="Customer" asp-action="Index">
                    <img src="../assets/vendor/logo.png"
                         alt="user-avatar"
                         class="d-block rounded p-0 m-0"
                         height="100"
                         id="logo"
                         style="object-fit: contain" />
                </a>
                <div class="px-3">
                    <p>Make your project easier with us.</p>
                    <p>&copy; <b>2022</b> - CASS</p>
                </div>
            </div>
		</div>
	</div>
	<!-- Footer End -->
	<!-- Back to Top -->
	<a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


	<!-- JavaScript Libraries -->
	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/easing/easing.min.js"></script>
	<script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

	<!-- Template Javascript -->
	<script src="~/js/main.js"></script>
	@RenderSection("Scripts", required: false)
</body>

</html>