@model IEnumerable<CASS___Construction_Assistance.Models.Project>

@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "_AppLayout";
}

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Welcome back!</h1>
    </div>
</div>
<!-- Page Header End -->
<!-- Cart Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-12 table-responsive mb-5">
            <a class="btn btn-primary py-2 px-4 mb-5" asp-controller="Customer" asp-action="Create">
                Create Project
            </a>
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Image</th>
                        <th>Project</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Constructor</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var project in Model)
                    {
                        <tr>
                            <td class="align-middle"><img src="https://picsum.photos/200/200" alt="" style="height: 50px;"> </td>
                            <td class="align-middle"><a class="nav-link" asp-controller="Customer" asp-action="Update" asp-route-id="@project.Id">@project.Name</a></td>
                            <td class="align-middle">RM @project.Price</td>
                            <td class="align-middle">@project.Status</td>
                            <td class="align-middle">@project.Constructor_Id</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Cart End -->
